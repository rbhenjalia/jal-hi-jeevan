<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="horizontal">
    <ImageView
        android:layout_width="70dp"
        android:layout_height="match_parent"
        android:id="@+id/RVimg"
        android:adjustViewBounds="true"
        app:srcCompat="@drawable/drop"/>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">
    <TextView
        android:id="@+id/UComplaintTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Here"
        android:textStyle="bold"
        android:layout_gravity="center"
        android:textSize="22dp"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="There"
        android:id="@+id/UComplaintLocation"
        android:layout_gravity="left"
        android:textSize="18dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:text="Status:"
            android:id="@+id/UStatus"/>
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="When"
        android:id="@+id/UComplaintDate"
        android:layout_gravity="left"
        android:textSize="18dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:text="Support Count:"
            android:id="@+id/USupportNumber"/>
    </RelativeLayout>
<!--<LinearLayout
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:layout_gravity="right">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:textSize="18dp"
        android:text="There"
        android:id="@+id/UComplaintSupports"
        />
</LinearLayout>-->
</LinearLayout>
</LinearLayout>